{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "declaration": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@excalidraw/excalidraw": ["types/excalidraw-shim"],
      "@excalidraw/*": ["types/excalidraw-shim"]
    },
    "rootDir": ".",
    "outDir": "dist"
  },
  "include": ["index.ts", "core/**/*", "layouts/**/*", "plugins/**/*", "utils/**/*", "types/**/*"],
  "exclude": ["dist", "node_modules", "**/*.test.ts", "**/*.spec.ts"]
}
